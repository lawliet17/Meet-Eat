<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_height="match_parent"
    tools:context=".DetailHistoryActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/loginbg"
            android:padding="16dp"
            android:src="@drawable/meat6" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Traditional Dinner in Pontianak"
        android:layout_marginTop="30px"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: 12 December 2019"
        android:layout_marginTop="25px"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:layout_gravity="left"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time: 20.30 - 22.30 WIB"
        android:layout_marginTop="25px"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:layout_gravity="left"
        />

    <TextView
        android:id="@+id/textView55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Course : Salmon wellington, seasonal salad"
        android:layout_marginTop="25px"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:layout_gravity="left"
        />
    <TextView
        android:id="@+id/textView555"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dessert: Lemon Tart"
        android:layout_marginTop="25px"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:layout_gravity="left"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location: Jl Sepakat 2 Blok C1"
        android:layout_marginTop="25px"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:layout_gravity="left"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="25px"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact: 082256006914"
            android:layout_marginTop="25px"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_gravity="left"
            />

    </LinearLayout>

</LinearLayout>