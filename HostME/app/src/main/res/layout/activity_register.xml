<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="18dp"
    android:orientation="vertical"
    android:paddingRight="18dp"
    android:background="@drawable/loginbg"
    tools:context=".Register">


    <ImageView
        android:layout_width="240dp"
        android:layout_height="161dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="10dp"
        android:padding="16dp"
        android:src="@drawable/meat6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="-20dp"
        android:background="@drawable/roundedshape">

        <EditText
            android:id="@+id/inv_name"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:hint="Fullname"
            android:inputType="text" />

        <EditText
            android:id="@+id/inv_date"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/inv_time"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:layout_marginTop="15dp"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/inv_starter"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Retype Password"
            android:inputType="textPassword" />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/birubiru"
                android:clickable="true"
                android:padding="8dp"
                android:text="SIGN UP"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginTop="400dp"/>

            <Button
                android:id="@+id/tombol_masuk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/birubiru"
                android:padding="8dp"
                android:text="ALREADY HAVE AN ACCOUNT? LOGIN NOW"
                android:textStyle="bold"
                android:clickable="true"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="12sp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>